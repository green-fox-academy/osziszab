@model WebApplication.Models.Assignee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Update</title>
</head>
<body>
    <h1>Edit Assignee </h1>
    <form asp-controller="Assignee" asp-action="UpdateAssignee" asp-route-id="@Model.Id" method="post">
        <label for="desc">Name</label>
        <input id="desc" type="text" asp-for="Name" required>

        <label for="desc">Email</label>
        <input id="desc" type="text" asp-for="Email" required>

        <input type="submit" value="Submit" class="submit" />
        <a href="/todo/list">Cancel</a>
    </form>
</body>
</html>